<!-- Super Container -->
<div class="super-container full-width" id="section-thirds">

	<!-- 960 Container -->
	<div class="container">	
		<div class="sixteen">
			<h3>Latest Projects</h3>
		</div>
		<% @projects_last.each do |project| %>
		<!-- 1/3 Columns -->
		<div class="one-third column">				
			<div class="module">						
				<div class="module-img">
					<%= link_to(project) do %>							
						<%= image_tag(project.image_url) %>
					<% end %>												    
				</div>				
				<div class="module-meta">
					<%= link_to(project) do %>	
					<h5><%= project.title%></h5>
					<% end %>	
					<p><%= project.description%></p>
				</div>						
			</div>				
		</div>
		<% end %>
		<!-- /End 1/3 Columns -->
		
	</div>
	<!-- /End 960 Container -->

</div>
<!-- /End Super Container -->


