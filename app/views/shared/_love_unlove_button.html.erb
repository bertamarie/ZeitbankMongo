<% if (user_signed_in? && @project.owner != current_user.id.to_s) %>        
	<% if @project.fans.include?(current_user.id.to_s) %>
		<%= button_to raw(" unlike "), :controller => 'projects', :action => 'unlike', :id => @project.id, :class => 'love' %> 
	<% else %>
		<%= button_to raw(" like "), :controller => 'projects', :action => 'like', :id => @project.id, :class => 'unlove' %>
    <% end %>  
<%end%>