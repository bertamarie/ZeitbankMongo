<div class="container">
		<div class="columns sixteen">
			<h3>Explore</h3>
				<% @categories.each do |category| %>
					<%= link_to category.name, category, :remote => true%>
				<% end %>
		</div>
		<div id="content">
			<% @categories.each do |category| %>
			<% category_projects = category.projects %>
				<% if (category_projects.exists?) %>
					<div class="sixteen columns">
						<h3><%= category.name %></h3>
					</div>		
					<% category_projects.each do |project| %>
					<!-- Delete all fans and likes -->
					<% if false %>
						<% project.fans = nil %>
						<% project.update_attribute("likes", 0) %>
					<% end %>
					<div class="four columns">
							<%= render :partial => 'projects/project_preview', :locals => {:project => project} %>	
					</div>
					<% end %>
				<% end %>
			<% end %>
		</div>
</div>


