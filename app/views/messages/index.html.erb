<h1>Listing messages</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Content</th>
    <th>Recipient</th>
    <th>Sender</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.subject %></td>
    <td><%= message.content %></td>
    <td><%= message.recipient %></td>
    <td><%= message.sender %></td>
    <td><%= link_to 'Show', {:controller => "messages", :action => "show", :id => message.id} %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy',  {:controller => "messages", :action => "destroy", :id => message.id}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

